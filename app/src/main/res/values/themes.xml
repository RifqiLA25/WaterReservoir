<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IoT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.IoT" parent="Base.Theme.IoT" />

    <style name="ButtonWhite">
        <item name="android:background">@drawable/bg_button</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/birudark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPink">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">@color/birudark</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/birudark</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/birudark</item>
        <item name="android:textSize"/>
    </style>

    <style name="TectInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/almostblack</item>
        <item name="startIconTint">@color/birudark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:radius">10dp</item>

    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:textColor">#546E7A</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>